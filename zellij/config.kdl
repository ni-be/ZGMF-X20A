keybinds clear-defaults=true {
    locked { 
        bind "Alt b" { SwitchToMode "Normal";}
            
    }
    normal { 
        bind "Ctrl b" {SwitchToMode "Tmux";}
    }
    tmux { 
        // Pane and Tab creation and closure
        bind "w" { NewPane "Right"; SwitchToMode "Normal";}
        bind "W" { NewPane "Down"; SwitchToMode "Normal";}
        bind "t" { NewTab; SwitchToMode "Normal";}
        bind "q" { CloseFocus; SwitchToMode "Normal";}
        bind "Q" { CloseTab; SwitchToMode "Normal";}
        // Float + Fullscreen
        bind "f" {ToggleFloatingPanes; SwitchToMode "Normal";}
        bind "F" { ToggleFocusFullscreen; SwitchToMode "Normal";}   
        // Pane / Tab Switcheroo 
        bind "h" { MoveFocus "Left"; }
        bind "l" { MoveFocus "Right"; }
        bind "j" { MoveFocus "Down"; }
        bind "k" { MoveFocus "Up"; }
        bind "p" { SwitchFocus; }
        bind "H" { GoToPreviousTab; }
        bind "J" { GoToNextTab; }              
        //Session
        bind "d" { Detach; }
        // OPENING A HX for quick notes in the correct repo
        bind "の" { Run "hx" "/home/nbertrand/SHOSAI/jinsei" ; SwitchToMode "Normal"; }
        bind "じ" { Run "fx" "/home/nbertrand/SHOSAI/jinsei/pdf" ; SwitchToMode "Normal";}    
        //functions QOL , keybindings
        bind "m" { ToggleMouseMode;}
        bind "/" { Run "bat" "/home/nbertrand/ZGMF-X20A/zellij/config.kdl"; SwitchToMode "Normal";}
        bind "?" { Run "bat" "/home/nbertrand/ZGMF-X20A/zsh/alias"; SwitchToMode "Normal";}
        
    } 
    pane {
        bind "h" { Resize "Increase Left"; }
        bind "j" { Resize "Increase Down"; }
        bind "k" { Resize "Increase Up"; }
        bind "l" { Resize "Increase Right"; }
        bind "H" { Resize "Decrease Left"; }
        bind "J" { Resize "Decrease Down"; }
        bind "K" { Resize "Decrease Up"; }
        bind "L" { Resize "Decrease Right"; }
        bind "=" "+" { Resize "Increase"; }
        bind "-" { Resize "Decrease"; }  
        //Move 
        bind "n" "Tab" { MovePane; }
        bind "Alt h" { MovePane "Left"; }
        bind "Alt j" { MovePane "Down"; }
        bind "Alt k" { MovePane "Up"; }
        bind "Alt l" { MovePane "Right"; }
        //customize
        bind "z" { TogglePaneFrames; SwitchToMode "Normal";}
        bind "e" { TogglePaneEmbedOrFloating; SwitchToMode "Normal"; }  
        bind "s" { ToggleActiveSyncTab; SwitchToMode "Normal"; } /// WHAT DOES IT DO????yc
        bind "p" { SwitchToMode "RenamePane"; PaneNameInput 0;}
        bind "t" { SwitchToMode "RenameTab"; TabNameInput 0; }
    } 
    scroll {
        bind "e" { EditScrollback; SwitchToMode "Normal"; }
        bind "s" { SwitchToMode "EnterSearch"; SearchInput 0; }
        bind "b" { ScrollToBottom; SwitchToMode "Normal"; }
        bind "j" { ScrollDown; }
        bind "k" { ScrollUp; }
        bind "l" { PageScrollDown; }
        bind "h" { PageScrollUp; }
        bind "d" { HalfPageScrollDown; }        
        bind "u" { HalfPageScrollUp; }
    } 
    search {
        bind "b" { ScrollToBottom; SwitchToMode "Normal"; }
        bind "j" { ScrollDown; }
        bind "k" { ScrollUp; }
        bind "l" { PageScrollDown; }
        bind "h" { PageScrollUp; }
        bind "d" { HalfPageScrollDown; }
        bind "u" { HalfPageScrollUp; }
        bind "n" { Search "down"; }
        bind "p" { Search "up"; }
        bind "c" { SearchToggleOption "CaseSensitivity"; }
        bind "w" { SearchToggleOption "Wrap"; }
        bind "o" { SearchToggleOption "WholeWord"; }
    } 
    entersearch clear-defaults=true {
        bind "Esc" { SwitchToMode "Scroll"; }
        bind "Enter" { SwitchToMode "Search"; }
    } 
    renametab clear-defaults=true {
        bind "Esc" {SwitchToMode "Pane";}
        bind "Enter" { SwitchToMode "Normal"; }
    }
    renamepane clear-defaults=true {
        bind "Esc" {SwitchToMode "Pane";}
        bind "Enter" { SwitchToMode "Normal"; }
    }
    // Switch Modes and Shared Bindings
    shared_except "Normal" "locked" "entersearch" {
        bind "Esc" {SwitchToMode "Normal";}
    }
    shared_except "locked" "entersearch" {
        bind "Alt b" { SwitchToMode "Locked"; }
        bind "Ctrl q" { Quit; }
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt 6" { GoToTab 6; }
        bind "Alt 7" { GoToTab 7; }
        bind "Alt 8" { GoToTab 8; }
        bind "Alt 9" { GoToTab 9; }     
    }
    shared_except "Normal" "locked" {
        bind "Esc" { SwitchToMode "Normal"; }
    }
    shared_except "search" "locked" {
        bind "F2" { SwitchToMode "Search"; }
    }
    shared_except "scroll" "locked" {
        bind "F1" { SwitchToMode "Scroll"; }
    }
    shared_except "tmux" "locked" {
        bind "Ctrl b" { SwitchToMode "Tmux"; }
    }
    shared_except "pane" "locked" {
        bind "Ctrl r" { SwitchToMode "Pane";}
    }
}
