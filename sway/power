# IDLE CONFIG

exec swayidle -w \
	timeout 900 'swaylock -f -i ~/Pictures/Wallpapers/SPACE/background_night16.jpg' \
    timeout 1200 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -i ~/Pictures/Wallpapers/SPACE/background_night16.jpg'

set $power_mode "power"
bindsym $mod+Shift+delete mode $power_mode
mode $power_mode {
    bindsym p         exec systemctl poweroff
    bindsym r         exec systemctl reboot 
    bindsym l         exec swaylock -i ~/Pictures/Wallpapers/SPACE/background_night16.jpg, mode "default"
    bindsym e         exec swaynag -t warning -m 'You Sure. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'	
    bindsym s         exec systemctl suspend, mode "default"

    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}